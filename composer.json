{
    "name": "codeigniter4/appstarter",
    "description": "CodeIgniter4 Vital Health Tracker API",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.5",
        "firebase/php-jwt": "^6.10"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit"
    }
}